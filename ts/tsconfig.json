{
    "compilerOptions": {
        "target": "ES5",
        "noEmitOnError": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "sourceMap": true,
        "noImplicitThis": true,
        "strictNullChecks": true,
        "noUnusedLocals": true,
        "noUnusedParameters": false,
        "module": "commonjs",
        "lib": [
            "es5",
            "dom",
            "es2015.promise"
        ]
    },
    "exclude": [
        "node_modules/typescript",
        "node_modules/remap-istanbul"
    ]
}
